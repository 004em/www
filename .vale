StylesPath = vale
MinAlertLevel = error

# Check EU stuff for irrelevant words and symbols

[conf/prague/**/*.rst,_data/config-prague-2018.yaml]
BasedOnStyles = EU

# Check NA stuff for irrelevant words and symbols

[conf/portland/**/*.rst,_data/config-portland-2018.yaml]
BasedOnStyles = NA

# WTD checks on the input

[*.{md,rst}]
BasedOnStyles = WTD

vale.Redundancy = YES
vale.GenderBias = YES

TheEconomist.UnnecessaryWords = YES
TheEconomist.Hectoring = YES

